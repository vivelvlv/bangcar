<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gesture_password_bg"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/welcomeNameTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/photoImg"
        android:layout_marginTop="61dp"
        android:textColor="#F6E8DB"
        android:textSize="16sp"
        android:text="xxx，欢迎回来"
        />
    
    <TextView 
        android:id="@+id/unlockTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/welcomeNameTv"
        android:layout_marginTop="21dp"
        android:textColor="#F6E8DB"
        android:textSize="15sp"
        android:text="请绘制手势密码解锁"
        />

    <com.bangcar.app.customview.LockPatternView
        android:id="@+id/gesturepwd_unlock_lockview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/unlockTv"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:layout_marginTop="22.7dp" />
    <RelativeLayout 
        android:id="@+id/bottomLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <TextView 
            android:id="@+id/forgetGesturePwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#f6e8db"
            android:text="忘记手势密码"
            />
        <TextView 
            android:id="@+id/loginWithAnother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#f6e8db"
            android:text="用其他帐号登录"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</RelativeLayout>