<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="45dp"
              android:id="@+id/productBaseInfoView"
              android:background="@drawable/product_detail_html_selector"
        >

    <TextView android:layout_width="wrap_content" android:layout_height="45dp"
              android:text="基本信息"
              android:textSize="14sp"
              android:layout_gravity="center"
              android:textColor="#3b3b3b"
              android:id="@+id/htmlItemName"
              android:gravity="left|center"
              android:layout_weight="1"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="45dp"
               android:src="@drawable/arrow"
               android:layout_gravity="center|right"
               />

</LinearLayout>