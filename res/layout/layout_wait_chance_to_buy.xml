<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buy_dialog_bg"
                android:minHeight="110dp" >

    <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal" >

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                android:text="还有机会"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/et_text_color"
                android:id="@+id/HeaderName"/>

        <TextView
                android:layout_below="@+id/HeaderName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/product_sub_title_color"
                android:text="未支付金额处于下单锁定状态,可能在5分钟内解锁."
                android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topLayout"
            android:layout_marginTop="10dp"
            android:gravity="center" >

        <Button
                android:id="@+id/okButton"
                android:layout_width="132dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buy_dialog_sure"
                android:text="好的"
                android:textColor="@color/white"
                android:textSize="16sp" />
    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/bottomLayout" />

</RelativeLayout>