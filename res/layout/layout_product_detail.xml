<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/register_bg">

    <include
            android:id="@+id/titleLayout"
            layout="@layout/layout_title"/>
    <ScrollView android:layout_width="fill_parent"
                android:layout_below="@+id/titleLayout"
                android:layout_height="fill_parent">

        <RelativeLayout
                android:id="@+id/BaseLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleLayout"
                >

            <TextView android:layout_width="wrap_content"
                      android:layout_height="120dp"
                      android:background="@drawable/detail_background"
                      android:id="@+id/headerPic"
                    />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="31赞"
                      android:background="#80FFFFFF"
                      android:layout_alignRight="@+id/headerPic"
                      android:layout_marginRight="15dp"
                      android:layout_alignBottom="@+id/headerPic"
                      android:layout_marginBottom="15dp"
                      android:padding="2dp"
                    />
            <ImageView android:layout_width="60dp" android:layout_height="60dp"
                       android:src="@drawable/headicon"
                       android:layout_marginTop="90dp"
                       android:layout_marginLeft="10dp"
                       android:id="@+id/headIcon"
                    />
            <TextView android:layout_width="wrap_content"
                      android:text="男，31岁，江苏人"
                      android:layout_alignBottom="@+id/headIcon"
                      android:layout_marginLeft="90dp"
                      android:textSize="15dp"
                      android:id="@+id/teacherAttrs"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="fill_parent"
                      android:layout_below="@+id/teacherAttrs"
                      android:background="#cccccc"
                      android:layout_marginTop="14dp"
                      android:id="@+id/headDivider_1"
                      android:layout_height="0.5dp"/>

            <Button android:layout_width="30dp" android:layout_height="30dp"
                    android:layout_alignBottom="@+id/headDivider_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="7dp"
                    android:id="@+id/addressBt"
                    android:background="@drawable/address_icon"
                    />

            <RelativeLayout android:layout_width="fill_parent"
                            android:layout_below="@+id/headDivider_1"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/teacherDetailTopLayout"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/introduceSelf"
                          android:textColor="@color/product_sub_title_color"
                          android:text="简介：从事汽车修理行业以及二手车行业5年，有丰富的经验以及行业背景，尤其对奔驰、宝马、大众等高端车型有很丰富的养护经验。职业态度、收费透明、配件都是原厂拿货。有保证。"
                        />
                <TextView android:layout_width="fill_parent"
                          android:layout_below="@+id/introduceSelf"
                          android:background="#cccccc"
                          android:layout_marginTop="4dp"
                          android:id="@+id/headDivider_2"
                          android:layout_height="0.5dp"/>

                <RelativeLayout android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/headDivider_2"
                                android:id="@+id/scoteLayout"
                                android:layout_marginTop="8dp"
                        >
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/rateLayout1"
                            >
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/product_sub_title_color"
                                  android:text="技术"
                                  android:textSize="15sp"
                                />
                        <RatingBar
                                android:id="@+id/ratingBar"
                                android:numStars="5"
                                android:rating="3.5"
                                android:layout_marginLeft="17dp"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_below="@+id/rateLayout1"
                                  android:id="@+id/rateLayout2"
                            >
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/product_sub_title_color"
                                  android:text="态度"
                                  android:textSize="15sp"
                                />
                        <RatingBar
                                android:id="@+id/ratingBar1"
                                android:numStars="5"
                                android:rating="3.5"
                                android:layout_marginLeft="17dp"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_below="@+id/rateLayout2"
                            >
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/product_sub_title_color"
                                  android:text="准时"
                                  android:textSize="15sp"
                                />
                        <RatingBar
                                android:id="@+id/ratingBar2"
                                android:numStars="5"
                                android:rating="3.5"
                                android:layout_marginLeft="17dp"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="51条评价详情"
                              android:layout_alignParentRight="true"
                              android:layout_centerInParent="true"
                              android:textSize="15dp"
                              android:textColor="@color/circle_red"
                            />

                </RelativeLayout>

            </RelativeLayout>


            <TextView android:layout_width="fill_parent"
                      android:layout_below="@+id/teacherDetailTopLayout"
                      android:background="#cccccc"
                      android:layout_marginTop="4dp"
                      android:id="@+id/headDivider_3"
                      android:layout_height="0.5dp"/>

            <!--看车记录详情-->
            <RelativeLayout android:layout_width="fill_parent"
                            android:layout_below="@+id/headDivider_3"
                            android:layout_marginTop="4dp"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:text="服务记录"
                          android:textSize="18sp"
                          android:id="@+id/recordTitle"
                          android:gravity="center"
                        />

                <!--显示服务记录-->
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_below="@+id/recordTitle"
                              android:layout_marginTop="10dp"
                              android:layout_marginLeft="10dp"
                              android:layout_marginRight="10dp"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">

                    <RelativeLayout android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#89AAAAAA"
                            >
                        <ImageView android:layout_width="60dp"
                                   android:src="@drawable/ic_launcher"
                                   android:id="@+id/WorkingPic"
                                   android:layout_height="60dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_toRightOf="@+id/WorkingPic"
                                  android:layout_marginTop="5dp"
                                  android:layout_marginLeft="17dp"
                                  android:id="@+id/workingTime"
                                  android:text="时间：2014/10/08"
                                />
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_toRightOf="@+id/WorkingPic"
                                  android:layout_below="@id/workingTime"
                                  android:layout_marginLeft="17dp"
                                  android:text="车型：福特-蒙迪欧2012款"
                                  android:id="@+id/workingCarType"
                                />
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_toRightOf="@+id/WorkingPic"
                                  android:layout_below="@id/workingCarType"
                                  android:layout_marginLeft="17dp"
                                  android:text="结论：价格适中，3年，7万公里..."
                                  android:id="@+id/workingResut"
                                  android:layout_marginBottom="7dp"
                                />

                        <TextView android:layout_width="20dp"
                                android:layout_height="fill_parent"
                                android:text="详情"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:background="@drawable/product_btn_buying_bg"
                                android:textColor="@color/white"
                                />

                    </RelativeLayout>


                    <!--展示2-->
                    <RelativeLayout android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#89AAAAAA"
                                    android:layout_marginTop="9dp"
                            >
                        <ImageView android:layout_width="60dp"
                                   android:src="@drawable/ic_launcher"
                                   android:id="@+id/WorkingPic1"
                                   android:layout_height="60dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_toRightOf="@+id/WorkingPic1"
                                  android:layout_marginTop="5dp"
                                  android:layout_marginLeft="17dp"
                                  android:id="@+id/workingTime1"
                                  android:text="时间：2014/10/08"
                                />
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_toRightOf="@+id/WorkingPic1"
                                  android:layout_below="@id/workingTime1"
                                  android:layout_marginLeft="17dp"
                                  android:text="车型：福特-蒙迪欧2012款"
                                  android:id="@+id/workingCarType1"
                                />
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_toRightOf="@+id/WorkingPic1"
                                  android:layout_below="@id/workingCarType1"
                                  android:layout_marginLeft="17dp"
                                  android:text="结论：价格适中，3年，7万公里..."
                                  android:id="@+id/workingResut1"
                                  android:layout_marginBottom="7dp"
                                />

                        <TextView android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:text="详情"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:background="@drawable/product_btn_buying_bg"
                                android:textColor="@color/white"
                                />

                    </RelativeLayout>
                    <!--结束展示2-->





                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

