<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/buy_dialog_bg"
    android:minHeight="110dp" >

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/titleIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_remain" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/titleIcon"
            android:gravity="center"
            android:textColor="@color/et_text_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/topLayout"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="132dp"
            android:layout_height="40dp"
            android:background="@drawable/buy_dialog_cancel"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="132dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/cancelButton"
            android:background="@drawable/buy_dialog_sure"
            android:text="好的"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/bottomLayout" />

</RelativeLayout>