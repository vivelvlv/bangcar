<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="et_style">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/et_text_color</item>
        <item name="android:textColorHint">@color/et_hint_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="dialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>

        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>
    
    <style name="AnimBottom" parent="@android:style/Animation">  
    	<item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
	</style>
	<style name="AnimTop" parent="@android:style/Animation">  
    	<item name="android:windowEnterAnimation">@anim/push_bottom_out</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_in</item>
	</style>

</resources>
